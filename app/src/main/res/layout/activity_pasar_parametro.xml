<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image"
    android:orientation="vertical"
    tools:context=".PasarParametroActivity">




    <EditText
        android:id="@+id/edtText_Nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:hint="Escriba su Nombre"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="150dp" />

    <EditText
        android:id="@+id/edtText_Telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="15dp"
        android:hint="Escriba su Telefono" />

    <EditText
        android:id="@+id/edtText_Direccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="15dp"
        android:hint="Escriba su Direccion" />





    <Button
        android:id="@+id/btnEnviarParametro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="50dp"
        android:textColor="@drawable/txt_btn_dos"
        android:text="@string/btn_PasarParametro"
        android:textSize="20sp"
        android:background="@drawable/btn_dos"/>


</LinearLayout>